# Force legacy peer dependencies resolution
legacy-peer-deps=true

# Increase network timeout for slower connections
network-timeout=100000

# Force packages to be installed even with conflicts
force=true

# Use strict SSL
strict-ssl=true

# Set registry
registry=https://registry.npmjs.org/

# Configure package lock
package-lock=true

# Configure save exact versions
save-exact=true

# Configure progress bar
progress=true

# Configure fetch retries
fetch-retries=5
fetch-retry-factor=2
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Configure cache settings
cache-min=3600
cache-max=86400 